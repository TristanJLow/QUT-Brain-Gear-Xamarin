<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="QUTBraingear.OverviewPage">
	<StackLayout>
			    <Label x:Name="label_videoPlaceholder" Text="VideoPlaceholder" BackgroundColor="Blue" Font="20" HeightRequest="100" >
			    	<Label.GestureRecognizers>
				        <TapGestureRecognizer Tapped="OnModuleTap" />
					</Label.GestureRecognizers>
			    </Label>
									
			    <Frame x:Name="frame_liveqa"  HeightRequest="120" OutlineColor="Silver" BackgroundColor="White" >
			    	<ScrollView Orientation="Horizontal"> 
										<Grid HorizontalOptions="Start">
											<Grid.RowDefinitions>
												<RowDefinition Height="12"/>
											</Grid.RowDefinitions>
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="200"/>
												<ColumnDefinition Width="200"/>
												<ColumnDefinition Width="200"/>
												<ColumnDefinition Width="200"/>

											</Grid.ColumnDefinitions>
											<RelativeLayout Grid.Column="0" Grid.Row="1" Padding="0">

													<Image Source="http://img1.wikia.nocookie.net/__cb20141001223538/camphalfbloodroleplay/images/0/0b/Youtube-play-button-png-transparent.png">
														<Image.GestureRecognizers>
															<TapGestureRecognizer Tapped="OnModuleTap" />
														</Image.GestureRecognizers>
													</Image>
													<Label Text="test1" TextColor ="White" TranslationX="60" TranslationY="75">
													<Label.GestureRecognizers>
														<TapGestureRecognizer Tapped="OnModuleTap" />
													</Label.GestureRecognizers>
													</Label>
											</RelativeLayout>

											<Label Grid.Row="1" Grid.Column="1" Text="text2" TextColor ="Black"/>
											<Label Grid.Row="1" Grid.Column="2" Text="text3" TextColor ="Black"/>
											<Label Grid.Row="1" Grid.Column="3" Text="text4" TextColor ="Black"/>
										</Grid>
						</ScrollView>			
				</Frame>
				<Frame x:Name="frame_skills" Padding="20"  HeightRequest="150" OutlineColor="Silver" BackgroundColor="White" >
						<ListView x:Name="listview_skills" ItemsSource="{Binding SkillList, Mode=OneWay}">
						<ListView.Header>
							<Label x:Name="label_skillSection" FontSize="Large" TextColor="Black" Text="Skills" />

						</ListView.Header>
							<ListView.ItemTemplate>
								<DataTemplate>
									<ViewCell>
										<Grid>
											<Grid.RowDefinitions>
												<RowDefinition Height="1*"/>
												<RowDefinition Height="1*"/>

											</Grid.RowDefinitions>
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="2*"/>
												<ColumnDefinition Width="1*"/>
											</Grid.ColumnDefinitions>
											<Label Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding skillTitle}" TextColor ="Black"/>
											<Label Grid.Row="1" Grid.Column="2" Text="{Binding skillPoints}" TextColor ="Black"/>
										</Grid>
									</ViewCell>
								</DataTemplate>
							</ListView.ItemTemplate>
						</ListView>
				</Frame>
	</StackLayout>
</BaseView>
