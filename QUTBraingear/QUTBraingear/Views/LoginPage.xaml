<?xml version="1.0" encoding="utf-8" ?>
<local:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:local="clr-namespace:QUTBraingear"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QUTBraingear.LoginPage" 
             Title="Log In Page">
  
   <StackLayout Spacing="40" Padding="40" VerticalOptions="Center">
   		<Label x:Name="label_loginTitle" FontAttributes="Bold" Text="QUT BrainGear" TextColor="#6666b2" Font="50" />
   		<Entry x:Name="Username" Placeholder="Username" Text="{Binding Username}"/>
   		<Entry x:Name="Password" Placeholder="Password" Text="{Binding Password}" IsPassword="true"/>

     <Button x:Name="button_login" Text="Login" HorizontalOptions="CenterAndExpand" Clicked="OnLoginTap"/>
   </StackLayout>
</local:BaseView>