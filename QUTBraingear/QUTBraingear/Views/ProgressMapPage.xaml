<?xml version="1.0" encoding="UTF-8"?>
<local:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:local="clr-namespace:QUTBraingear"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="QUTBraingear.ProgressMapPage">
	<StackLayout>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<Image Grid.Column="0" Source="Programming.png" />
			<Image Grid.Column="1" Source="Design.png" />
			<Image Grid.Column="2" Source="Marketing.png" />

		</Grid>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<TapGestureRecognizer Command="{Binding programmingModule}" >
				<Image Grid.Column="0" Grid.Row="0" Source="ProgrammingPercent.png" />
				<Label Grid.Column="1" Grid.Row="0" Text="Mobile App Development" />
			</TapGestureRecognizer>
			<TapGestureRecognizer Command="{Binding designModule}">
				<Image Grid.Column="0" Grid.Row="1" Source="DesignPercent.png" />
				<Label Grid.Column="1" Grid.Row="1" Text="Web Design" />
			</TapGestureRecognizer>
			<TapGestureRecognizer Command="{Binding marketingModule}">
				<Image Grid.Column="0" Grid.Row="2" Source="MarketingPercent.png" />
				<Label Grid.Column="1" Grid.Row="2" Text="International Markets" />
			</TapGestureRecognizer>
		</Grid>
	</StackLayout>
</local:BaseView>
